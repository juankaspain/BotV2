# BotV2 Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!

# ========================================
# DASHBOARD AUTHENTICATION (REQUIRED)
# ========================================

# Dashboard username (default: admin)
DASHBOARD_USERNAME=admin

# Dashboard password - MUST BE SET!
# Generate strong password: python -c "import secrets; print(secrets.token_urlsafe(32))"
DASHBOARD_PASSWORD=your_super_secure_password_here_change_me!

# ========================================
# DATABASE (REQUIRED)
# ========================================

# PostgreSQL connection
POSTGRES_PASSWORD=your_database_password_here
POSTGRES_USER=botv2_user
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=botv2

# ========================================
# EXCHANGE APIs (IMPORTANT)
# ========================================

# Polymarket (Primary exchange)
POLYMARKET_API_KEY=pk_live_your_api_key_here
POLYMARKET_SECRET=your_api_secret_here

# Kalshi (Fallback)
# KALSHI_API_KEY=your_kalshi_key
# KALSHI_SECRET=your_kalshi_secret

# Crypto exchanges via CCXT
# BINANCE_API_KEY=your_binance_key
# BINANCE_SECRET=your_binance_secret

# ========================================
# NOTIFICATIONS (OPTIONAL)
# ========================================

# Telegram bot for alerts
# Get token from @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_CHAT_ID=your_chat_id

# Slack webhook for notifications
# Create at: https://api.slack.com/messaging/webhooks
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notifications (via SendGrid)
# SENDGRID_API_KEY=your_sendgrid_key
# ALERT_EMAIL=your.email@example.com

# ========================================
# MONITORING (OPTIONAL)
# ========================================

# Prometheus/Grafana
# PROMETHEUS_PORT=9090
# GRAFANA_API_KEY=your_grafana_key

# Sentry error tracking
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ========================================
# SECRETS MANAGEMENT (PRODUCTION)
# ========================================

# HashiCorp Vault
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your_vault_token

# AWS Secrets Manager
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret

# ========================================
# DEVELOPMENT / TESTING
# ========================================

# Environment mode
ENVIRONMENT=development  # development, staging, production

# Enable debug mode (WARNING: Never enable in production!)
# DEBUG=false

# Log level
# LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
