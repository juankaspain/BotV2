# BotV2 Environment Variables Example
# Copy this file to .env and fill in your values

# ========================================
# System Configuration
# ========================================
BOTV2_ENV=production

# ========================================
# Database Configuration
# ========================================
POSTGRES_DB=botv2
POSTGRES_USER=botv2_user
POSTGRES_PASSWORD=change_this_password_123!

# ========================================
# Redis Configuration
# ========================================
REDIS_PASSWORD=change_this_redis_password_456!

# ========================================
# Trading API Keys
# ========================================
# Polymarket
POLYMARKET_API_KEY=your_polymarket_api_key_here

# Binance (if using)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Coinbase Pro (if using)
COINBASE_API_KEY=
COINBASE_SECRET=
COINBASE_PASSPHRASE=

# Kraken (if using)
KRAKEN_API_KEY=
KRAKEN_SECRET=

# ========================================
# Alert Services (Optional)
# ========================================
# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Slack
SLACK_WEBHOOK_URL=

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=

# ========================================
# Advanced Options
# ========================================
# Timezone
TZ=Europe/Madrid

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO